.centerText{
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);

  text-align: center;

  h1{
    +to-width($breakpointMobile){
      font-size: 3em;

      position: relative;
      top: 20px;
    }

    +from-width($breakpointTablet){
      font-size: 6em;
      position: relative;
      top: 25px;
    }

    -webkit-animation-duration: 1.5s;
    animation-duration: 1.5s;
  }

  h2 {

    +to-width($breakpointMobile){
      font-size: 1.3em;

      position: relative;
      top: 5px;
    }

    +from-width($breakpointTablet){
      font-size: 1.6em
    }

    -webkit-animation-delay: 1.5s;
    animation-delay: 1.5s;

    -webkit-animation-duration: 1s;
    animation-duration: 1s;
  }

  h1, h2{
    color: white;
  }

  hr{
    margin: auto;

    +to-width($breakpointMobile){
      width: 90%;
    }

    +from-width($breakpointTablet){
      width: 45em;
    }
  }

  i{

    +to-width($breakpointMobile){
      margin: 10px 15px;
    }

    +from-width($breakpointTablet){
      margin: 25px 35px;
    }

    color: white;

  }

  i:hover{
    color: grey;
  }

  .links{
    -webkit-animation-delay: 2.5s;
    animation-delay: 2.5s;

    -webkit-animation-duration: 1s;
    animation-duration: 1s;
  }
}

.imageBackground{
  height: 100%;
  width: 100%;
}

.shade{
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.85);
}